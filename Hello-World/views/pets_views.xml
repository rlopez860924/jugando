<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View pets View Tree -->
    <record id="view_pets_tree" model="ir.ui.view">
        <field name="name">view.pets.tree</field>
        <field name="model">pets</field>
        <field name="arch" type="xml">
            <tree string="Pets">
                <field name="name"/>
                <field name="age" />
                <field name="color"/>
                <field name="type"/>
                <field name="is_new"/>      
            </tree>
        </field>
    </record>

    <!-- View pets form -->
    <record id="view_pets_form" model="ir.ui.view">
        <field name="name">view.pets.form</field>
        <field name="model">pets</field>
        <field name="arch" type="xml">
            <form string="Pets List">
                <group>
                    <group>
                        <field name="name"/>
                        <field name="age"/>
                        <field name="is_new"/>                        
                    </group>
                     <group>
                        <field name="color"/>
                        <field name="type"/>                        
                    </group>
                    
                </group>
            </form>
        </field>
    </record>

    <!-- View pets search -->
    <record id="view_pets_search" model="ir.ui.view">
        <field name="name">view.pets.search</field>
        <field name="model">pets</field>
        <field name="arch" type="xml">
            <search string="Pets">
                <group expand="1" string="Group By">
                    <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action pets -->
    <record id="action_pets" model="ir.actions.act_window">
        <field name="name">Pets</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">pets</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_pets_tree"></field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new Pets.
            </p>
        </field>
    </record>

<!--  Declaramos los menu --> 
<menuitem id="pets_menu" name="Pets" web_icon="stock,static/description/icon.png" sequence="10"/> 
<menuitem id="submenu_pets_menu" name="Pets" sequence="10" parent="pets_menu"/> 
<menuitem id="submenu_pets_action" name="Pets" sequence="10" parent="submenu_pets_menu" action="action_pets"/>
</odoo> 
