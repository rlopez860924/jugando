<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View estate_property_offer View Tree -->
    <record id="view_estate_property_offer_tree" model="ir.ui.view">
        <field name="name">view.estate_property_offer.tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree string="Estate_property_offer">
                <field name="price"/>
                <field name="status"/>
                <field name="partner_id"/>
                            
            </tree>
        </field>
    </record>

    <!-- View estate_property_offer form -->
    <record id="view_estate_property_offer_form" model="ir.ui.view">
        <field name="name">view.estate_property_offer.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="Estate_property_offer">
                <sheet>
                    <div class="oe_title">                        
                        <h1>
                            <field name="price"/>
                            <field name="status"/>
                            <field name="partner_id"/>
                            
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- View estate_property_offer search -->
    <record id="view_estate_property_offer_search" model="ir.ui.view">
        <field name="name">view.estate_property_offer.search</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <search string="Estate_property_offer">                
                <field name="price"/>
                <field name="partner_id"/>
                <field name="status"/>                
            </search>            
        </field>
    </record>

    <!-- Action estate_property_offer -->
    <record id="action_estate_property_offer" model="ir.actions.act_window">
        <field name="name">Estate_property_offer</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new Estate_property_offer.
            </p>
        </field>
    </record>

</odoo>
